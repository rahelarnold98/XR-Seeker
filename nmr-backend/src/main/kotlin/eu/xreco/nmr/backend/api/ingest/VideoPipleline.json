              "retrievableWriter": "RetrievableWriter",
              "duration": "1",
              "lookAheadTime": "1"
            },
            "extractors": [
              {"factory": "CLIPImageExtractor",
                "parameters": {
                  "field": "clip",
                  "persisting": "true"
                },
                "exporters": [
                  {"factory": "ThumbnailExporterFactory",
                    "parameters": {
                      "exporter": "thumbnail"
                    },
                    "resolver": {
                      "factory": "DiskResolverFactory",
                      "parameters": {
                        "resolver": "thumbnail"
                      }
                    },
                    "exporters": []
                  }
                ]
              }
            ]
          }
        ]
      }
